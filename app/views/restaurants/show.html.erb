<div class="text-center">

<p id="notice"><%= notice %></p>

<p>
  <h1 class="text-center">
    <strong>Restaurant:</strong>
    <%= @restaurant.title %>
    <br>
  </h1>

<h5>

  <%= link_to 'Edit Restaurant', edit_user_restaurant_path(@user, @restaurant), class:"btn btn-outline-secondary" %>

  <%= link_to 'Delete Restaurant', user_restaurant_path(@restaurant) , method: :delete, data: { confirm: 'Are you sure you would like to delete this restaurant forever?' }, class:"btn btn-danger", :style => "color: #f8f8f8;"  %>

</h5>
</p>
<hr>


<%= link_to "Add Menu", new_restaurant_menu_path(@restaurant), class:"btn btn-success btn-block", :style => "color: #f8f8f8;"  %>
<hr>

<% @menus.each do |menu | %>

    <strong> Menu:</strong> <%= link_to "#{menu.title}", restaurant_menu_path(@restaurant, menu) %>
  <hr>
<% end %>

<br>

<%= link_to "View All Menus for #{@restaurant.title}", restaurant_menus_path(@restaurant), class:"btn btn-outline-primary"%>



<br>

<br>
<hr>

<br>
<%= link_to 'Back', :back, class:"btn btn-primary", :style => "color: #f8f8f8;"  %>

</div>
