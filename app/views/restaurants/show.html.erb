<div class="text-center">

<p id="notice"><%= notice %></p>

<p>
  <h1 class="text-center">
    <strong>Restaurant:</strong>
    <%= @restaurant.title %>
    <br>
  </h1>

<h5>
  <%= link_to 'Edit Restaurant', edit_user_restaurant_path(@user, @restaurant), class:"btn btn-secondary", :style => "color: #f8f8f8;" %>

</h5>

</p>
<hr>

<div class="text-center">
<%= link_to "Add Menu", new_restaurant_menu_path(@restaurant), class:"btn btn-primary", :style => "color: #f8f8f8;"  %>
</div>

<br>

<% if Menu.any? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.title %></td>
        <td><%= link_to 'Show', restaurant_menu_path(@restaurant, menu) %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<% end %>

<br>
<br>

<br>
<br>
<%= link_to 'Back', :back, class:"btn btn-primary", :style => "color: #f8f8f8;"  %>



</div>
