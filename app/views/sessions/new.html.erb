<div class="card">

  <%= form_tag '/login' do %>

  <br>
  <h1>Login</h1>
  <br>

  <div class="form-group">
    Email:
    <%= text_field_tag :email, '', placeholder: "sample@example.com" %>
  </div>

  <div class="form-group">
    Password:
    <%= password_field_tag :password, '', placeholder: "Password"%>
  </div>

  <center class="submit ">
    <%= submit_tag "Submit" %>
  </center>
  <br>
</div>

  <% end %>

  <br>
  <br>
  <br>

</div>
