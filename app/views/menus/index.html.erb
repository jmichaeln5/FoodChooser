<!-- http://localhost:3000/restaurants/1/menus -->

<p id="notice"><%= notice %></p>

<h1>
  <%= @restaurant.title%> Menus
</h1>
<%= link_to "Add Menu", new_restaurant_menu_path(@restaurant), class:"btn btn-primary", :style => "color: #f8f8f8;"  %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.title %></td>
        <td><%= link_to 'Show', restaurant_menu_path(@restaurant, menu) %></td>

        <td><%= link_to 'Edit', edit_restaurant_menu_path(@restaurant, menu) %></td>

        <td><%#= link_to 'Destroy', restaurant_menu_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
