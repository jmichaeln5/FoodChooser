<%= form_with(model: [ @restaurant, @restaurant.menus.build ]) do |form| %>

  <% if @menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this @menu from being saved:</h2>

      <ul>
      <% @menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= form.hidden_field :restaurant_id, id: :restaurant_id, value: @restaurant.id %>
  </div>

  <div>
    <%= "Restaurant ID" %>
    <br>
    <%= @restaurant.id %>
    <br>
    <% form.label :restaurant_id %>
    <% form.text_area :restaurant_id, id: @restaurant.id %>
  </div>

<hr>
<br>

  <div class="field">
    <%= form.label :title, 'Menu Title' %>
    <%= form.text_field :title, id: :menu_title %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
